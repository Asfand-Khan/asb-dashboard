generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Hero {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  primaryText   String
  secondaryText String
}

model Ourmission {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  bodyText String
}

model Casestudy {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  location String
  problem  String
  solution String
  image    String
}

model Customquote {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  jobTitle           String
  primaryContactName String
  phoneNumber        String
  email              String
  comments           String?
  file               String?
}

model Reviews {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  image        String?
  reviewerName String
  review       String
}

model Trustedby {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  image String
}

model Services {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  headingText String
  text        String
  image       String
}

model Quote {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  jobTitle    String
  projectType String
  services    String
  name        String
  email       String
  phone       String
  comments    String?
  file        String?
}

model Servicepagecontent {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  bodyText String
}

model Servicepageourprocess {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  bodyText String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
}

model Blog {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slug      String @unique
  shortDesc String
  longDesc  String
  image     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slug      String @unique
  shortDesc String
  longDesc  String
  image     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
